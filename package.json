{
  "name": "extend-vscode",
  "displayName": "Toolkit for building VS Code extensions.",
  "description": "Toolkit for building VS Code extensions.",
  "version": "0.1.0",
  "types": "./out/node/index.d.ts",
  "author": "Marcus R. Brown <contact@marcusrbrown.com>",
  "publisher": "marcusrbrown",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcusrbrown/extend-vscode"
  },
  "bugs": {
    "url": "https://github.com/marcusrbrown/extend-vscode/issues"
  },
  "homepage": "https://github.com/marcusrbrown/extend-vscode#readme",
  "packageManager": "pnpm@10.14.0",
  "files": [
    "out/",
    "LICENSE.md",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "vscode",
    "extension",
    "toolkit",
    "utilities"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/node/extension.js",
  "browser": "./out/web/extension.js",
  "exports": {
    ".": {
      "types": "./out/node/index.d.ts",
      "default": "./out/node/index.js"
    },
    "./commands": {
      "types": "./out/node/commands/index.d.ts",
      "default": "./out/node/commands/index.js"
    },
    "./configuration": {
      "types": "./out/node/configuration/index.d.ts",
      "default": "./out/node/configuration/index.js"
    },
    "./webview": {
      "types": "./out/node/webview/index.d.ts",
      "default": "./out/node/webview/index.js"
    },
    "./treeView": {
      "types": "./out/node/tree-view/index.d.ts",
      "default": "./out/node/tree-view/index.js"
    },
    "./tasks": {
      "types": "./out/node/tasks/index.d.ts",
      "default": "./out/node/tasks/index.js"
    },
    "./statusBar": {
      "types": "./out/node/status-bar/index.d.ts",
      "default": "./out/node/status-bar/index.js"
    },
    "./telemetry": {
      "types": "./out/node/telemetry/index.d.ts",
      "default": "./out/node/telemetry/index.js"
    },
    "./utils": {
      "types": "./out/node/utils/index.d.ts",
      "default": "./out/node/utils/index.js"
    }
  },
  "contributes": {
    "commands": [
      {
        "command": "extend-vscode.webHello",
        "title": "Hello from Web Extension",
        "category": "Extend VSCode"
      },
      {
        "command": "extend-vscode.showWebview",
        "title": "Show Example Webview",
        "category": "Extend VSCode"
      },
      {
        "command": "extend-vscode.refreshTree",
        "title": "Refresh Example Tree",
        "category": "Extend VSCode"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "extend-vscode.exampleTree",
          "name": "Example Tree View",
          "icon": "$(list-tree)"
        }
      ]
    },
    "configuration": {
      "title": "Extend VSCode",
      "properties": {
        "extend-vscode.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "description": "The minimum log level to show in the output channel"
        }
      }
    }
  },
  "scripts": {
    "bootstrap": "pnpm install --prefer-offline --loglevel warn",
    "vscode:prepublish": "pnpm run build",
    "dev-node": "pnpm run watch --platform node --env.LAUNCH 1",
    "dev-web": "pnpm run watch --platform browser --env.LAUNCH 1",
    "build": "tsup",
    "generate:meta": "vscode-ext-gen --output src/generated/meta.ts",
    "prepare": "pnpm run generate:meta",
    "watch": "tsup --watch",
    "lint": "eslint",
    "fix": "eslint --fix",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "tsx test/run-test.ts",
    "test:visual": "playwright test -c visual-test.config.ts",
    "test:visual:ui": "playwright test -c visual-test.config.ts --ui",
    "test:visual:update": "playwright test -c visual-test.config.ts --update-snapshots",
    "test:web": "vitest run -c vitest.config.web.ts",
    "test:web:watch": "vitest -c vitest.config.web.ts",
    "test:web:coverage": "vitest run -c vitest.config.web.ts --coverage",
    "type-check": "tsc --noEmit",
    "vsce:package": "pnpm run lint && pnpm run type-check && pnpm run test && pnpm run test:web && pnpm run build && vsce package --no-dependencies",
    "vsce:publish": "pnpm run vsce:package && vsce publish",
    "ovsx:publish": "pnpm run lint && pnpm run type-check && pnpm run test && pnpm run test:web && pnpm run build && ovsx publish -p $OVSX_TOKEN",
    "npm:publish": "pnpm run lint && pnpm run type-check && pnpm run test && pnpm run test:web && pnpm run build && pnpm publish",
    "publish:all": "pnpm run vsce:publish && pnpm run ovsx:publish && pnpm run npm:publish",
    "publish:dry-run": "pnpm run lint && pnpm run type-check && pnpm run test && pnpm run test:web && pnpm run build && vsce package --no-dependencies --out test.vsix && echo 'Dry run: Would publish to VS Code Marketplace' && echo 'Dry run: Would publish to OpenVSIX with ovsx publish -p $OVSX_TOKEN' && echo 'Dry run: Would publish to npm with pnpm publish --dry-run' && pnpm publish --dry-run && rm -f test.vsix",
    "rollback": "tsx scripts/rollback.ts",
    "rollback:emergency": "tsx scripts/rollback.ts --emergency",
    "validate:tokens": "tsx scripts/validate-tokens.ts",
    "validate:publish": "tsx scripts/publish-utils.ts",
    "semantic-release": "semantic-release",
    "semantic-release:dry-run": "semantic-release --dry-run"
  },
  "devDependencies": {
    "@bfra.me/eslint-config": "0.26.0",
    "@bfra.me/tsconfig": "0.12.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@swc/core": "1.13.0",
    "@types/glob": "9.0.0",
    "@types/node": "22.17.1",
    "@types/vscode": "1.102.0",
    "@playwright/test": "1.54.2",
    "@vitest/coverage-v8": "3.2.2",
    "@vitest/eslint-plugin": "1.3.3",
    "@vitest/ui": "^3.0.6",
    "@vscode/test-cli": "0.0.10",
    "@vscode/test-electron": "2.5.2",
    "@vscode/test-web": "0.0.67",
    "@vscode/vsce": "3.6.0",
    "esbuild-plugin-polyfill-node": "0.3.0",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-node-dependencies": "1.1.1",
    "eslint-plugin-prettier": "5.5.0",
    "jiti": "<2.5.0",
    "jsdom": "26.1.0",
    "ovsx": "0.10.5",
    "prettier": "3.6.0",
    "semantic-release": "24.2.7",
    "semantic-release-vsce": "6.0.11",
    "tsup": "^8.0.2",
    "tsx": "4.20.0",
    "type-fest": "4.41.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.40.0",
    "vitest": "^3.0.6",
    "vscode-ext-gen": "1.1.0"
  }
}
