{
  "extends": "@bfra.me/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext", "WebWorker"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "outDir": "out",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", ".vscode-test", "out"]
}
